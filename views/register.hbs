<!-- views/register.hbs -->
{{#> layout}}
{{#if message}}
  <!-- Error Message Box -->
  <div class="bg-red-600 text-white p-4 rounded-lg shadow-md mb-6">
    <p class="text-center">{{message}}</p>
  </div>
{{/if}}

<div class="flex justify-center items-center min-h-screen bg-gray-800">
  <!-- Register Form Container -->
  <div class="w-full max-w-md bg-gray-900 p-8 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-white mb-6">Create an Account</h2>

    <!-- Register Form -->
    <form action="/register" method="POST" class="space-y-6">

      <!-- Username Field -->
      <div>
        <label for="username" class="block text-white text-sm mb-2">Username</label>
        <input type="text" id="username" name="username" class="w-full max-w-xs p-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required>
      </div>

      <!-- Email Field -->
      <div>
        <label for="email" class="block text-white text-sm mb-2">Email</label>
        <input type="email" id="email" name="email" class="w-full max-w-xs p-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required>
      </div>

      <!-- Password Field -->
      <div>
        <label for="password" class="block text-white text-sm mb-2">Password</label>
        <input type="password" id="password" name="password" class="w-full max-w-xs p-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required>
      </div>

      <!-- Confirm Password Field -->
      <div>
        <label for="confirmPassword" class="block text-white text-sm mb-2">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" class="w-full p-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required>
      </div>

      <!-- Register Button -->
      <div>
        <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-lg text-lg hover:bg-green-700 transition-all">
          Register
        </button>
      </div>
    </form>

    <!-- Optional: Add a link to login if already have an account -->
    <div class="mt-4 text-center">
      <p class="text-sm text-gray-300">Already have an account? <a href="/login" class="text-green-500 hover:underline">Login here</a></p>
    </div>
  </div>
</div>
{{/layout}}
