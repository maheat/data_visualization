<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link href="/css/output.css" rel="stylesheet"> <!-- Link to Tailwind CSS -->
</head>
<body class="bg-gray-800 text-white">
  <!-- Header (Top Bar) with Improved App Name Styling -->
  <header class="p-4 bg-gray-900">
    <div class="flex items-center justify-between">
      <!-- App Name with Enhanced Styling -->
      <div class="text-4xl font-extrabold text-indigo-600 border-2 border-indigo-600 p-2 rounded-md hover:bg-indigo-600 hover:text-white transition-all">
    <a href="/" class="flex items-center">
        <span class="text-3xl mr-2">ðŸ“Š</span> <!-- Icon -->
        Data Analysis Tool
    </a>
</div>

    </div>
  </header>

  <!-- Main Content and Sidebar Layout -->
  <div class="flex min-h-screen">
    <!-- Sidebar (Left Column) -->
    <div class="w-64 bg-gray-900 p-6">
      <div class="text-center mb-6">
        <h3 class="text-lg font-semibold">Welcome, {{user.username}}</h3>
      </div>
      <nav>
        <ul class="space-y-4">
          <li><a href="/dashboard" class="text-gray-300 hover:text-white">Dashboard</a></li>
          <li><a href="/profile" class="text-gray-300 hover:text-white">Profile</a></li>
          <li><a href="/view-analysis" class="text-gray-300 hover:text-white">Analysis</a></li>
          <li>
            {{#if user}}
              <form action="/logout" method="POST">
                <button type="submit" class="text-gray-300 hover:text-white">Logout</button>
              </form>
            {{else}}
              <a href="/login" class="text-gray-300 hover:text-white">Login</a>
            {{/if}}
          </li>
        </ul>
      </nav>
    </div>

    <!-- Main Content Area (Page Content Goes Here) -->
    <div class="flex-1 flex justify-center items-center p-8 bg-gray-800">
      <div class="w-full max-w-sm bg-gray-800 p-8 rounded-lg shadow-xl">
        {{{body}}} <!-- This is where page-specific content will be injected -->
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="p-4 bg-gray-900 text-center text-gray-400">
    <p>&copy; Maheen Eatazaz <br>2024 My Data Exploration Tool</p>
  </footer>
</body>
</html>
