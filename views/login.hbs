<!-- views/login.hbs -->
{{#> layout}}
{{#if message}}
  <!-- Error Message Box -->
  <div class="bg-red-600 text-white p-4 rounded-lg shadow-md mb-6">
    <p class="text-center">{{message}}</p>
  </div>
{{/if}}

<div class="flex justify-center items-center min-h-screen bg-gray-800">
  <!-- Login Form Container -->
  <div class="w-full max-w-md bg-gray-900 p-6 rounded-lg shadow-xl">
    <h2 class="text-2xl font-bold text-center text-white mb-6">Login</h2>

    <!-- Login Form -->
    <form action="/login" method="POST" class="space-y-4">

      <!-- Username Field -->
      <div>
        <label for="username" class="block text-white text-sm mb-2">Username</label>
        <input type="text" id="username" name="username" class="w-full p-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required>
      </div>

      <!-- Password Field -->
      <div>
        <label for="password" class="block text-white text-sm mb-2">Password</label>
        <input type="password" id="password" name="password" class="w-full p-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required>
      </div>

      <!-- Login Button -->
      <div>
        <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-lg text-lg hover:bg-green-700 transition-all">
          Login
        </button>
      </div>

      <!-- Optional: Add a link to register or forgot password -->
      <div class="mt-4 text-center">
        <p class="text-sm text-gray-300">Don't have an account? <a href="/register" class="text-green-500 hover:underline">Register here</a></p>
      </div>
    </form>
  </div>
</div>
{{/layout}}
